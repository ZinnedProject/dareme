<%= link_to 'New Event', new_event_path %>
<br />
<br />

<h1>Listing Events</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Event Date</th>
    <th>Location</th>
    <th>Bidding End</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.user.profile.user_name, '/profile/'+ event.user.profile.user_name %></td>
    <td><%= link_to event.title, '/event/' + event.custom_url %></td>

    <td><%= event.event_time %></td>
    <td><%= event.location %></td>
    <td><%= event.raise_end %></td>
  </tr>
<% end %>
</table>

<br />


